{
  "compilerOptions": {
    "lib": [
      "es5",
      "es2015.promise",
      "dom",
      "es2015",
      "es2016",
      "esnext.asynciterable"
    ],
    "module": "commonjs",
    "noImplicitAny": true,
    "sourceMap": false,
    "target": "es2016",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "outDir": "build",
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src"
  ]
}