{
  "name": "phoenix-backend",
  "main": "./src/electron.js",
  "license": "MIT",
  "scripts": {
    "web:build": "yarn clean && tsc",
    "clean": "rimraf build",
    "web:prod": "ts-node ./src/web.ts",
    "web:start": "ts-node-dev ./src/web.ts",
    "desktop:build": "yarn clean && tsc",
    "desktop:start": "wait-on http://localhost:3000 && yarn desktop:build && electron ./build/desktop.js",
    "postinstall": "electron-builder install-app-deps",
    "cli": "ts-node ./node_modules/typeorm/cli -f ./src/ormconfig.ts"
  },
  "author": "stellarbears",
  "dependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/cookie-parser": "^1.4.2",
    "@types/electron": "^1.6.10",
    "@types/graphql": "^14.5.0",
    "@types/jsonwebtoken": "^8.3.5",
    "@types/uuid": "^3.4.6",
    "apollo-server": "^2.25.3",
    "bcryptjs": "^2.4.3",
    "class-sanitizer": "^0.0.5",
    "class-validator": "^0.10.0",
    "cookie-parser": "^1.4.4",
    "electron": "^5.0.6",
    "electron-builder": "^21.2.0",
    "electron-is-dev": "^1.1.0",
    "express": "^4.17.1",
    "graphql": "^14.1.1",
    "graphql-transport-electron": "^1.0.1",
    "jsonwebtoken": "^8.5.1",
    "nodemon": "^1.19.1",
    "reflect-metadata": "^0.1.13",
    "sqlite3": "^4.1.0",
    "ts-node": "^8.5.4",
    "ts-node-dev": "^1.0.0-pre.42",
    "type-graphql": "^0.17.5",
    "typedi": "^0.8.0",
    "typeorm": "^0.2.18",
