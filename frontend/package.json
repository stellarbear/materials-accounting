{
  "name": "phoenix-frontend",
  "private": true,
  "author": "kanmir",
  "homepage": "./",
  "build": {
    "appId": "com.kanmir.phoenix",
    "productName": "Phoenix",
    "copyright": "",
    "files": [
      "build/**/*",
      "node_modules/**/*"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "win": {
      "target": "portable",
      "icon": "assets/app.ico"
    }
  },
  "dependencies": {
    "@craco/craco": "^5.6.2",
    "apollo-boost": "^0.4.4",
    "apollo-server": "^2.9.3",
    "craco-less": "^1.14.4",
    "graphql": "^14.5.4",
    "rc-slider": "^8.7.0",
    "react": "^16.8.1",
    "react-apollo": "^3.0.1",
    "react-dom": "^16.8.1",
    "react-router": "^4.3.1",
    "react-router-dom": "^4.3.1",
    "react-scripts": "3.0.1",
    "reflect-metadata": "^0.1.13",
    "semantic-ui-less": "^2.4.1",
    "semantic-ui-react": "^0.88.0",
    "cross-env": "^5.2.0"
  },
  "scripts": {
    "start": "craco start",
    "build": "craco build",
    "env:web": "cross-env REACT_APP_PLATFORM=web",
    "env:desktop": "cross-env REACT_APP_PLATFORM=desktop cross-env REACT_APP_VERSION=1.1.3",
    "web:start": "yarn env:web && yarn start",
    "web:build": "yarn env:web && yarn build",
    "desktop:start": "cross-env BROWSER=none && yarn env:desktop && yarn start",
    "desktop:build": "yarn env:desktop yarn build"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
